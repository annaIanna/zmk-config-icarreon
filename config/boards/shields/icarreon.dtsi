#include <dt-bindings/zmk/matrix_transform.h>

/ {
    chosen {
        zmk,kscan = &kscan0;                  // Keyboard scan driver
        zmk,matrix_transform = &default_transform;  // Matrix layout
    };

    // Key matrix transform (adjust rows/columns to match your PCB)
    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <7>;  // Number of columns in your matrix
        rows = <4>;      // Number of rows in your matrix
        map = <
            0        0        RC(0,2)  RC(0,3)  RC(0,4)  0        0  // Row 0
            0        RC(1,1)  RC(1,2)  RC(1,3)  RC(1,4)  RC(1,5)  0  // Row 1
            RC(2,0)  RC(2,1)  RC(2,2)  RC(2,3)  RC(2,4)  RC(2,5)  RC(2,6)    // Row 2
            RC(3,0)  RC(3,1)  RC(3,2)  RC(3,3)  RC(3,4)  RC(3,5)  RC(3,6)    // Row 3
        >;
    };

    // Keyboard scan configuration (GPIO pins for rows/columns)
     kscan0: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        wakeup-source;
        diode-direction = "col2row";
        row-gpios
            = <&pro_micro 3 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // Row A from the schematic file
            , <&pro_micro 2 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // Row B from the schematic file
            , <&pro_micro 0 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // Row C from the schematic file
            , <&pro_micro 1 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // Row D from the schematic file
            ;
     }
};